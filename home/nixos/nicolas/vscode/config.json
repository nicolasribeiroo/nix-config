{
  "cSpell.enableFiletypes": [
    "!go",
    "!handlebars",
    "!php",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scss"
  ],
  "cSpell.language": "en,pt",

  "discord.detailsEditing": "Editing {dir_name}/{file_name} ({file_size})",
  "discord.lowerDetailsEditing": "In {workspace}",

  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14.5,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.lineHeight": 1.8,
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.rulers": [
    80,
    120
  ],
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },

  "explorer.compactFolders": false,

  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,

  "files.associations": {
    "*.css": "css",
    ".dev.vars": "dotenv",
    ".env*": "dotenv",
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "tsconfig.json": "jsonc"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true
  },

  "nix.enableLanguageServer": true,
  "nix.formatterPath": "alejandra",
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "formatting": {
        "command": ["alejandra"]
      }
    }
  },

  "symbols.files.associations": {
    "*.e2e-spec.ts": "ts-test",
    "*.guard.ts": "typescript",
    "*.mock.ts": "ts-test",
    "*.module.ts": "nest",
    "*.spec.ts": "ts-test",
    ".env.development.local": "gear",
    ".env.example": "gear",
    ".env.local": "gear",
    ".env.test.local": "gear",
    "vitest.config.e2e.ts": "vite"
  },
  "symbols.hidesExplorerArrows": false,

  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.smoothScrolling": true,

  "update.mode": "none",

  "window.commandCenter": true,
  "window.titleBarStyle": "custom",

  "workbench.colorTheme": "Min Dark",
  "workbench.preferredDarkColorTheme": "Min Dark",
  "workbench.preferredLightColorTheme": "Min Light",
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",

  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right",

  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  "[json, jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },

  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  }
}